<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="WeatherView">
        <attr name="startingWeather" format="enum">
            <enum name="SUN" value="2"/>
            <enum name="RAIN" value="0"/>
            <enum name="SNOW" value="1"/>
        </attr>
        <attr name="lifeTime" format="integer"/>
        <attr name="fadeOutTime" format="integer"/>

        <attr name="numParticles" format="integer"/>
        <attr name="fps" format="integer"/>
        <attr name="angle" format="integer"/>

        <attr name="rain_src" format="reference"/>
        <attr name="snow_src" format="reference"/>
    </declare-styleable>
</resources>